            <div class="card-header">
              <strong class="card-title">Kullanıcı ekle</strong>
            </div>
            <div class="card-body">
              <!-- Credit Card -->
              <div id="pay-invoice">
                <div class="card-body">

                  <form action="/kullanici-olustur" method="POST" novalidate="novalidate">
                    <div class="form-group">
                      <label for="cc-payment" class="control-label mb-1">İsim</label>
                      <input id="cc-payment" name="isim" type="text" class="form-control" aria-required="true" aria-invalid="false" required>
                    </div>
                    <div class="form-group has-success">
                      <label for="cc-name" class="control-label mb-1">Soyisim</label>
                      <input id="cc-payment" name="soyisim" type="text" class="form-control" aria-required="true" aria-invalid="false" required >
                    </div>
                    <div class="form-group">
                      <label for="cc-number" class="control-label mb-1">Email</label>
                      <input id="cc-number" name="email" type="email" class="form-control cc-number identified visa" value="" data-val="true" required >
                    </div>

                    <div class="form-group">
                      <label for="cc-number" class="control-label mb-1">admin</label>
                      <input id="cc-number" name="admin" type="checkbox" class="form-control cc-number identified"  style="width: 15%" >
                    </div>

                    <div class="form-group">
                      <label for="cc-number" class="control-label mb-1">Parola</label>
                      <input id="cc-number" name="parola" type="password" class="form-control cc-number identified visa" value=""  required>
                    </div>
                    <div>
                      <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                        <span id="payment-button-amount">Oluştur</span>
                      </button>
                    </div>
                  </form>
                </div>
              </div>

            </div>
